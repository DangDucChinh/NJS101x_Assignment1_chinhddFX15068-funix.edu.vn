<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>

        <% if(oldInput.email){ %>
            <h3>Email : <%= oldInput.email %></h3>
        <% } %>

            <form class="login-form" action="/reset" method="POST">
            <div class="form-control">
                <label for="oldpass">Old Password</label>
                <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                 type="password" name="oldpass" id="oldpass" value="<%= oldInput.oldpass %>" placeholder="OLD Pass">
            </div>
            <div class="form-control">
                <label for="password">Password : </label>
                <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                 type="password" name="password" id="password" value="<%= oldInput.password %>" placeholder="New Pass">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Reset Password</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>